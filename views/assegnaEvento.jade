                    .card.m-3
                        .card-body
                            // Vertical Steppers
                            .row.mt-1
                                .col-md-12
                                    // Stepers Wrapper
                                    ul.stepper.stepper-vertical
                                        // First Step
                                        li.active#stepUno
                                            a(href='')
                                                span.circle 1
                                                span.label Scegli un opzione

                                            .step-content.col-md-6#contenutoStepUno
                                                .row
                                                    .col-6
                                                        h4 Invia Evento
                                                        label.bs-switch(for='invioEvento')
                                                            input#invioEvento(name='someSwitchOption001', type='checkbox', autocomplete='off' onchange='switchTableEvent();')
                                                            span.slider.round
                                                    .col-6
                                                        h4 Invia Nota Informativa
                                                        label.bs-switch(for='invioNotainformativa')
                                                            input#invioNotainformativa(name='someSwitchOption002', type='checkbox', autocomplete='off' onchange='switchTableEvent();')
                                                            span.slider.round
                                                .row
                                                    button#btnConfermaStepUno.waves-effect.waves-dark.btn.btn-md.btn-primary.next-step(onclick='passaStepDue();') Continua
                                        // Second Step
                                        li#stepDue
                                            // Section Title
                                            a(href='')
                                                span.circle 2
                                                span.label#lblStepDue
                                            // Section Description
                                            .step-content.col-md-12#contenutoStepDue
                                                .container-fluid
                                                    .row
                                                        .md-form.col-md-6
                                                            i.fa.fa-calendar.prefix(aria-hidden='true')
                                                            label.cols-sm-2.control-label(for='dataEvento') Dal giorno:
                                                            input#dataEvento.form-control(type='text', name="dataEvento", readonly="readonly", placeholder='GG/MM/AAAA')
                                                .container-fluid#conteinerHideEvento
                                                    .row.mx-2
                                                        .col-md-12.table-responsive
                                                            table#tabellaEventi.table.table-striped.table-bordered(width='100%', cellspacing='0')
                                                                thead
                                                                    tr
                                                                        th
                                                                        th Titolo Evento
                                                                        th Sottotitolo Evento
                                                                        th Luogo
                                                                        th Data Inizio
                                                                        th Data Fine
                                                                        th Relatori
                                                                tfoot
                                                                    tr
                                                                        th
                                                                        th Titolo Evento
                                                                        th Sottotitolo Evento
                                                                        th Luogo
                                                                        th Data Inizio
                                                                        th Data Fine
                                                                        th Relatori
                                                .row
                                                    .col-md-3
                                                        button#btnAnnullaStepDue.waves-effect.waves-dark.btn.btn-md.btn-secondary.previous-step(onclick='inizializzaPagina();') Annulla
                                                    .col-md-3
                                                        button#btnConfermaStepDue.waves-effect.waves-dark.btn.btn-md.btn-primary.next-step(onclick='passaStepTre();') Continua

