                                                            h4 E-mail
                                                            label.bs-switch(for='invioEmail')
                                                                input#invioEmail(name='someSwitchOption001', type='checkbox', autocomplete='off', onchange='switchTableModalitaInvio();')
                                                                span.slider.round
                                                        .col-sm-2
                                                            h4(style="visibility:#{smsAttivo};") SMS
                                                            label.bs-switch(for='invioSms', style="visibility:#{smsAttivo};")
                                                                input#invioSms(name='someSwitchOption001', type='checkbox', autocomplete='off', onchange='switchTableModalitaInvio();', style="visibility:#{smsAttivo};")
                                                                span.slider.round
                                                        .col-sm-6
