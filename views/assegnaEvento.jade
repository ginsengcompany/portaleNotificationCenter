                                                    .row
                                                        .col-sm-4
                                                            h3 Seleziona modalità di comunicazione
                                                        .col-sm-2
                                                        .col-sm-4
                                                            h3 Seleziona modalità d'interesse
                                                    .row
                                                        .col-sm-2
                                                            h4 Push Notifications
                                                            label.bs-switch(for='invioPush')
