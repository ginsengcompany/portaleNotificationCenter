                                        span(aria-hidden='true') ×
                            .modal-body.mx-3
                                .row
                                    .md-form.col-md-12
                                        // Titolo
                                        i.fa.fa-briefcase.prefix(aria-hidden='true')
                                        label.cols-sm-2.control-label(for='titoloEvento') Titolo Evento
                                        input#titoloEvento.form-control(type='text', placeholder='Titolo evento')
                                .row
                                    .md-form.col-md-12
                                        // Sottotitolo
                                        i.fa.fa-briefcase.prefix(aria-hidden='true')
